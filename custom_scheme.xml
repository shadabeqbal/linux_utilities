<style-scheme id="customDarkTheme" _name="Custom Dark Theme" version="1.0">
  <author>Modified by Shadab Eqbal</author>
  <_description>Custom Dark Theme with enhanced readability and light selection colors.</_description>

  <!-- Palette -->
  <color name="black"        value="#000000"/>
  <color name="white"        value="#f5f5f5"/>
  <color name="blue"         value="#4F94CD"/>
  <color name="magenta"      value="#FF77FF"/>
  <color name="violet"       value="#9B30FF"/>
  <color name="cyan"         value="#00FFFF"/>
  <color name="green"        value="#00FF7F"/>
  <color name="bordeaux"     value="#B22222"/>
  <color name="red"          value="#FF6347"/>
  <color name="yellow"       value="#FFFF99"/>
  <color name="purple"       value="#BA55D3"/>
  <color name="dark-gray"    value="#1C1C1C"/>
  <color name="light-gray"   value="#D3D3D3"/>
  <color name="selection-light" value="#FFFF99"/>

  <!-- Editor style -->
  <style name="text"                        foreground="#D3D3D3" background="#1C1C1C"/>
  <style name="selection"                   foreground="#000000" background="#FFFF99"/>
  <style name="selection-unfocused"         foreground="#000000" background="#FFD700"/>
  <style name="cursor"                      foreground="#00FFFF"/>
  <style name="secondary-cursor"            foreground="#7FFFD4"/>
  <style name="current-line"                background="#2E2E2E"/>
  <style name="line-numbers"                foreground="#A9A9A9" background="#2E2E2E"/>
  <style name="bracket-match"               foreground="#000000" background="#FFFFE0" bold="true"/>
  <style name="bracket-mismatch"            foreground="#FFFFFF" background="#FF6347" bold="true"/>
  <style name="search-match"                foreground="#000000" background="#FFFF99"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="#7F7F7F"/>
  <style name="def:shebang"                 foreground="#7F7F7F" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="#FF77FF"/>
  <style name="def:special-char"            foreground="#9B30FF"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="#00FFFF"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="#B22222" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="#00FF7F" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="#BA55D3"/>
  <style name="def:error"                   background="#FF6347" bold="true"/>
  <style name="def:note"                    foreground="#FFFFFF" background="#FFFF99" bold="true"/>
  <style name="def:underlined"              italic="true" underline="true"/>

  <!-- Language-specific styles -->
  <style name="diff:added-line"             foreground="#00FF7F"/>
  <style name="diff:removed-line"           foreground="#9B30FF"/>
  <style name="diff:changed-line"           use-style="def:preprocessor"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:diff-file"              use-style="def:type"/>

  <style name="xml:tags"                    foreground="#00FFFF"/>
  <style name="xml:attribute-name"          foreground="#9B30FF"/>
  <style name="xml:namespace"               foreground="#00FF7F" bold="true"/>

  <style name="js:object"                   foreground="#00FF7F" bold="true"/>
  <style name="js:constructors"             foreground="#00FFFF"/>

  <style name="latex:display-math"          foreground="#9B30FF"/>
  <style name="latex:command"               foreground="#00FF7F" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

  <style name="sh:variable"                 foreground="#9B30FF"/>

  <!-- Legacy styles for old lang files -->
  <style name="Others"                      foreground="#00FF7F" bold="true"/>
  <style name="Others 2"                    foreground="#00FFFF"/>
  <style name="Others 3"                    foreground="#9B30FF"/>
</style-scheme>

